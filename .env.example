# CORE SETTINGS
PYTHON_VERSION="3.11"

# API KEYS & SECURITY
# The first API key will be generated and printed to the console on the first run.
# Subsequent keys must be managed via the database or a dedicated admin interface.
OPENAI_API_KEY="sk-..."
ANTHROPIC_API_KEY="sk-..."
OPENROUTER_API_KEY="sk-or-..."

# LLM & EMBEDDING & RAG CONFIG
LLM_PROVIDER="openai" # 'openai', 'anthropic', 'openrouter'
EMBEDDING_MODEL="text-embedding-3-small"
EMBEDDING_DIMENSIONS=1536
EMBEDDING_BATCH_SIZE=128
EXTRACTION_MODEL="gpt-3.5-turbo" # Cheaper model for entity extraction
GENERATOR_MODEL="gpt-4-turbo"
RRF_K=60 # Reciprocal Rank Fusion `k` parameter

# INGESTION CONFIG
CHUNK_SIZE=512
CHUNK_OVERLAP=50
ENTITY_RESOLUTION_THRESHOLD=85 # Fuzzy matching score (0-100)

# DATABASE & STORAGE CONFIG
# Metadata Store (SQLAlchemy) - Examples for Postgres, SQLite
# METADATA_STORE_URL="postgresql+asyncpg://user:password@host:port/dbname"
METADATA_STORE_URL="sqlite+aiosqlite:///./doublehelix.db"

# Graph Store (Neo4j)
NEO4J_URI="bolt://localhost:7687"
NEO4J_USER="neo4j"
NEO4J_PASSWORD="your-neo4j-password"
NEO4J_DATABASE="neo4j"

# Document Store (S3-compatible, e.g., MinIO)
S3_ENDPOINT_URL="http://localhost:9000"
S3_AWS_ACCESS_KEY_ID="minioadmin"
S3_AWS_SECRET_ACCESS_KEY="minioadmin"
S3_BUCKET_NAME="doublehelix-documents"
S3_REGION_NAME="us-east-1"

# CELERY & REDIS CONFIG
CELERY_BROKER_URL="redis://localhost:6379/0"
CELERY_RESULT_BACKEND="redis://localhost:6379/1"

# RAGAS EVALUATION
RAGAS_FAITHFULNESS_THRESHOLD=0.85
RAGAS_CONTEXT_RECALL_THRESHOLD=0.80
